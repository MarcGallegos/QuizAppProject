<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imageViewCust_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="questionTV_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="questionHeader_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="checkbox_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textColor">@color/question_text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonTint">@color/cocaColaRed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radioButton_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/question_text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/cocaColaRed</item>
    </style>

    <style name="radioGroup_Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:textColor">@color/question_text_grey</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="viewDividerH_Style">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/cocaColaRed</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="checkButton_Style">
        <item name="android:background">@drawable/photo_button_lit_neonred_lg</item>
        <item name="android:contentDescription">@string/content_description_checkbutton</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="editText_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/question_text_grey</item>
        <item name="android:textColor">@color/question_text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPersonName|textCapWords</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>

</resources>
